    <!-----mobile-menu----->
    <!----mobile-search-box-script--->
    <script>
        $(function() {
            var pull 		= $('#pull');
            menu 		= $('.search-bar form');
            menuHeight	= menu.height();
            $(pull).on('click', function(e) {
                e.preventDefault();
                menu.slideToggle();
            });
            $(window).resize(function(){
                var w = $(window).width();
                if(w > 320 && menu.is(':hidden')) {
                    menu.removeAttr('style');
                }
            });
        });
    </script>
    <!----End-search-box-script--->
