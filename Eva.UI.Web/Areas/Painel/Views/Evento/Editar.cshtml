@using Eva.Dominio
@model Eva.UI.Web.Areas.Painel.Controllers.EventoViewModel

<div class="col-md-12">
    <!--breadcrumbs start -->
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home", new { Area = "Painel" })"><i class="fa fa-home"></i> Inicio</a></li>
        <li><a href="@Url.Action("Index", "Evento", new { Area = "Painel" })"><i class="fa fa-home"></i> Eventos</a></li>
        <li class="active">Editar</li>
    </ul>
    <!--breadcrumbs end -->
</div>

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            @(string.IsNullOrEmpty(Model.Id) ? "Cadastrar novo evento" : "Editar evento: " + Model.Titulo)
        </header>
        <div class="panel-body">
            <div>
                @Html.ValidationSummary()
                <form class="cmxform form-horizontal " id="usuarioForm" method="POST" action="" novalidate="novalidate" enctype="multipart/form-data">
                   
                    <div class="form-group ">
                        <label for="Titulo" class="control-label col-lg-3">Titulo:</label>
                        <div class="col-lg-6">
                            <input class=" form-control" id="Titulo" name="Titulo" type="text" value="@Model.Titulo" required="">
                            <label for="Titulo" class="error">@Html.ValidationMessageFor(x => x.Titulo)</label>
                        </div>
                    </div>
                    
                    <div class="form-group ">
                        <label for="Descricao" class="control-label col-lg-3">Descrição:</label>
                        <div class="col-lg-6">
                            <textarea class="form-control" rows="3" id="Descricao" name="Descricao" required="">@Model.Descricao</textarea>
                            <label for="Descricao" class="error">@Html.ValidationMessageFor(x => x.Descricao)</label>
                        </div>
                    </div>

                    <div class="form-group ">
                        <label for="Local" class="control-label col-lg-3">Local:</label>
                        <div class="col-lg-6">
                            <input class="form-control " id="Local" type="text" name="Local" value="@Model.Local" required="">
                            <label for="Local" class="error">@Html.ValidationMessageFor(x => x.Local)</label>
                        </div>
                    </div>

                    <div class="form-group ">
                        <label for="Data" class="control-label col-lg-3">Data:</label>
                        <div class="col-lg-6">
                            <input class="form-control " id="Data" type="text" name="Data" value="@Model.Data" required="">
                            <label for="Data" class="error">@Html.ValidationMessageFor(x => x.Data)</label>
                        </div>
                    </div>

                    <div class="form-group ">
                        <label for="Creditos" class="control-label col-lg-3">Créditos:</label>
                        <div class="col-lg-6">
                            <input class="form-control " id="Credito" type="text" name="Creditos" value="@Model.Creditos" required="">
                            <label for="Creditos" class="error">@Html.ValidationMessageFor(x => x.Creditos)</label>
                        </div>
                    </div>

                    <div class="form-group ">
                        <label for="Publicado" class="control-label col-lg-3">Publicado:</label>
                        <div class="col-lg-6">
                            <input type="checkbox" checked="@Model.Publicado" id="Publicado" name="Publicado" value="true">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-6">
                            <button class="btn btn-primary" type="submit">Salvar</button>
                            <a href="@Url.Action("Index")" class="btn btn-default">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </section>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-fileupload.js"></script>
<script type="text/javascript">
    $("#usuarioForm").validate({
        rules: {
            Titulo: {
                required: true,
                minlength: 3
            }
        },
        messages: {
            Titulo: {
                required: "O campo titulo é obrigatorio.",
                minlength: "O campo titulo deve conter no mínimo 3 caracteres."
            }
        }

    });
</script>
