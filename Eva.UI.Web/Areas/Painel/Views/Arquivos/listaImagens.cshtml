@model Eva.UI.Web.Areas.Painel.Controllers.ArquivoViewModel

@foreach (var arquivo in Model.Arquivos)
{

    <li id="@arquivo.Id" data-pathimg="@Foto.Placehold(arquivo.Nome,"250x250",Model.Plugin)" data-nome="@arquivo.Nome" data-legenda="@arquivo.Legenda" data-ordem="@arquivo.Ordem" class="images item" style="background-color: #ffffff">
        <img src="@Foto.Placehold(arquivo.Nome,"210x200",Model.Plugin)" alt="" class="handler" />
        <p id="legenda_@arquivo.Ordem">@arquivo.Legenda.Substring(0, arquivo.Legenda.Length > 25 ? 25 : arquivo.Legenda.Length) ...</p>

        <div class="row prd-row menuimagem">
            <div class="action" style="right: 23px; bottom: 35px;">
                <a data-id="@arquivo.Id" data-toggle="modal" data-target="#editarImagem" href="#" class="part1"><i class="fa fa-pencil"></i></a>
                <a data-id="@arquivo.Id" data-toggle="modal" data-target="#confimarExclusao" href="#" class="part1 yellow-bg-prd"><i class="fa fa-trash-o"></i></a>
            </div>
        </div>

    </li>
}
